@inherits BooksBase

@if (NotPublishedBooks != null && NotPublishedBooks.Any())
{
    <center>Wkrótce!</center>
    foreach (var book in NotPublishedBooks)
    {
        <BookCoverLink Book="book" />
    }
}

@if (PublishedBooks != null)
{
    <center>Już dostępne!</center>
    @foreach (var book in PublishedBooks)
    {
        <BookCoverLink Book="book" />
    }
}